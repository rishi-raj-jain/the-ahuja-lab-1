---
import { Image } from '@astrojs/image/components'

const { loading = 'lazy', data } = Astro.props
---

<div class="flex flex-col items-start">
  <Image
    fit="cover"
    width="100"
    height="100"
    alt={data.Name}
    loading={loading}
    src={data.Image.filename}
    class="transform-gpu rounded object-cover"
    style={`background-image: url(${data.blurDataURL}); background-repeat: no-repeat; background-position: 50% 50%; background-size: cover;`}
  />
  {
    data.Email && (
      <a class="mt-5" rel="noopener noreferrer" href={`mailto:${data.Email}`} target="_blank">
        <svg class="fill-white/75" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16">
          <title>{data.Name} Gmail Profile Link</title>
          <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
        </svg>
      </a>
    )
  }
  {data.Name && <span class="mt-5 text-lg font-medium text-white">{data.Name}</span>}
  {data.Title && <span class="mt-5 text-sky-300">{data.Title}</span>}
  {data.About && <span class="mt-3 text-sm sm:text-lg text-white/50">{data.About}</span>}
</div>
